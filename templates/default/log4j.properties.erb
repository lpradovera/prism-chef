# Auto-generated by Chef for <%= node[:fqdn] %>

log4j.rootLogger=<%= node[:prism][:log4j][:root_logger].join(", ") %>

log4j.appender.CONSOLE=org.apache.log4j.ConsoleAppender
log4j.appender.CONSOLE.Target=System.out
log4j.appender.CONSOLE.layout=org.apache.log4j.PatternLayout
log4j.appender.CONSOLE.layout.ConversionPattern=%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p [%t] %m%n

log4j.appender.FILE= com.micromethod.common.util.LimitedFileAppender
log4j.appender.FILE.File=${kernel.home}/logs/sipmethod.log
log4j.appender.FILE.DatePattern='.'yyyy-MM-dd
log4j.appender.FILE.Append=<%=node[:prism][:log4j][:file][:append]%>
log4j.appender.FILE.MaxFileSize=<%=node[:prism][:log4j][:file][:max_file_size]%>
log4j.appender.FILE.MaxBackupIndex=<%=node[:prism][:log4j][:file][:max_backup_index]%>
log4j.appender.FILE.layout=org.apache.log4j.PatternLayout
log4j.appender.FILE.layout.ConversionPattern=%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p [%t] %m%n

log4j.logger.net.sf=ERROR
log4j.logger.org.apache=ERROR
log4j.logger.org.hibernate=ERROR
log4j.logger.org.jgroups=ERROR
log4j.logger.com.micromethod.sipmethod.server.container.impl.loader=INFO

log4j.appender.SYSLOG=org.apache.log4j.net.SyslogAppender
log4j.appender.SYSLOG.SyslogHost=<%= node[:prism][:log4j][:syslog][:server] %>
log4j.appender.SYSLOG.Threshold=<%= node[:prism][:log4j][:syslog][:threshold] %>
log4j.appender.SYSLOG.UseTCP=<%= node[:prism][:log4j][:syslog][:tcp] %>
log4j.appender.SYSLOG.layout=com.voxeo.logging.EncodedPatternLayout
log4j.appender.SYSLOG.layout.ConversionPattern=%d{MMM dd HH:mm:ss} %X{HostName} Prism %X{AccountID}/%X{SessionGUID}/%X{SessionNumber}/1/%c/%m%
log4j.appender.SYSLOG.layout.MaxMessageSize=1300

log4j.logger.com.micromethod.sipmethod.server.http=INFO 
log4j.logger.com.micromethod.sipmethod.server.container.impl.http=INFO 
log4j.logger.com.micromethod.sipmethod.server.container.impl.filter=INFO